<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verPublicacion.VerPublicacion"
    android:orientation="vertical"
    android:background="@drawable/fondo01"
    >

    <Button
        android:id="@+id/btnVolverVerPublicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_volver_flecha"
        android:text="VOLVER"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:backgroundTint="#5929D135"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />

    <TextView
        android:id="@+id/tituloVerPublicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Titulo de la publicacion"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:autoSizeTextType="uniform"
        />


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="10dp"
        cardCornerRadius="15dp"
        android:backgroundTint="#40FFFFFF"
        android:elevation="8dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/imagenVerPublicacion"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    android:src="@drawable/producto"
                    />

                <TextView
                    android:id="@+id/descripcionVerPublicacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Descripcion de toda la publicacion
                                    que debe de ser mas largo que el resto de los textos"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="5dp"
                    android:autoSizeTextType="uniform"
                    />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#CC6B6B6B"
                    android:layout_marginVertical="20dp"
                    android:layout_marginHorizontal="10dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    >

                    <TextView
                        android:id="@+id/tvCantidadVisitasVerPub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:autoSizeTextType="uniform"
                        android:text="33 Visitas"
                        android:textSize="15sp" />

                    <ImageButton
                        android:id="@+id/shareVerPublicacion"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@null"
                        android:layout_marginLeft="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_share" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="#CC6B6B6B"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="10dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <Button
                        android:id="@+id/btnEnvioSolicitudVerPub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enviar Solicitud de Intercambio"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginHorizontal="15dp"
                        />

                    <Button
                        android:id="@+id/btnNeedLoginSolicitudVerPub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Inicia sesion o registrate aqui para enviarle una solicitud de intercambio"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:backgroundTint="@color/verdeFondo"
                        />

                    <Button
                        android:id="@+id/btnMiPubSolicitudVerPub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Puedes editar tu publicacion aqui"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginHorizontal="15dp"
                        android:backgroundTint="@color/teal_700"
                        />


                </RelativeLayout>



            </LinearLayout>

        </ScrollView>


    </com.google.android.material.card.MaterialCardView>

</LinearLayout>