<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.verSolicitudesDeIntercambios.VerSolicitudesDeIntercambioFragment">

    <TextView
        android:id="@+id/tvTituloVerSolicitudesRec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/teal_700"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center_horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:text="Aceptar solicitud"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnVolverDeVerSolicitudesRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_volver_flecha"
        android:text="VOLVER"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#5929D135"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#59223CA4"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivMiPubXInt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:layout_marginLeft="25dp"
                android:src="@drawable/sin_imagen"
                />

            <TextView
                android:id="@+id/tvTituloMiPubxInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tu Publicacion\nTitulo de Publicacion"
                android:fontFamily="sans-serif-black"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B3144A11"
        android:fontFamily="@font/nunito_semibold"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"
        android:text="Solicitudes"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        />


    <ListView
        android:id="@+id/lvPubParaInt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99CBCBCB"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="2dp"
        />

</LinearLayout>