<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.registroUsuario.RegistroFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/fondoregistro">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-25dp"
        android:elevation="8dp"
        android:background="@drawable/marco_titulo"
        >

        <TextView
            android:id="@+id/textregistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Registro"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="10dp"
            android:textColor="#1c1c1c"
            android:fontFamily="sans-serif-black"
            />

    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:backgroundTint="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:paddingVertical="25dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userNameLayout"
                    android:hint="Nombre"
                    app:errorEnabled="true"
                    android:layout_marginTop="25dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Registro_Nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:backgroundTint="@color/blancotransparente"
                        android:background="@drawable/marco_titulo"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userApellidoLayout"
                    android:hint="Apellido"
                    app:errorEnabled="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Registro_Apellido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:backgroundTint="@color/blancotransparente"
                        android:background="@drawable/marco_titulo"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userNickLayout"
                    android:hint="Nombre de Usuario"
                    app:errorEnabled="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_Registro_NickName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:backgroundTint="@color/blancotransparente"
                        android:background="@drawable/marco_titulo"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/btn_GoForm2Registro"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/btn_contorno"
                    android:text="SIGUIENTE"
                    android:backgroundTint="@color/purple_700"
                    android:elevation="15dp"
                    />

             </LinearLayout>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>