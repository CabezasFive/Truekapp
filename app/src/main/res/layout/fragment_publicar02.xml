<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/fondo01"
    tools:context=".ui.publicar.PublicarFragment">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-25dp"
        android:elevation="8dp"
        android:background="@drawable/marco_titulo"
        >

        <TextView
            android:id="@+id/textregistro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva Publicacion"
            android:gravity="center"
            android:textSize="15sp"
            android:padding="10dp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/rojo"
            android:fontFamily="sans-serif-black"
            />

    </RelativeLayout>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:backgroundTint="#40FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="25dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Descripcion_producto"
                android:layout_gravity="top"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_DescripciÃ³n"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="60dp"
                    android:textColor="#000000"
                    android:textSize="15sp"/>
            </com.google.android.material.textfield.TextInputLayout>



            <Button
                android:id="@+id/btn_GoForm3Publicar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_contorno"
                android:text="SIGUIENTE"
                android:backgroundTint="@color/purple_700"
                android:elevation="15dp"
                />

        </LinearLayout>

    </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>

